
# Set up the plotting script
set terminal \
png nocrop enhanced \
size 1400,1000 \
font "/Library/Fonts/Times New Roman.ttf,10"
set output 'MultiPlot.png'

# Begin plotting
set multiplot \
layout 4,3 \
rowsfirst \
margins 0.07, 0.96, 0.07, 0.96 \
spacing 0.07

# Common settings
set border linewidth 3 linecolor "#AAAAAA"
set xlabel "Time [sec]"      font "/Library/Fonts/Times New Roman.ttf, 12"
set ytics border nomirror    font "/Library/Fonts/Times New Roman.ttf, 10"
set xtics border nomirror    font "/Library/Fonts/Times New Roman.ttf, 10"
set format y "%-2.1f"
#set mytics 2
#set mxtics 2
set key off

# Subfigure (R1,C1)
set ylabel "Att_{x} [rad]" \
font "/Library/Fonts/Times New Roman.ttf, 12"
plot sin(x) \
with lines linewidth 2 linecolor "black"
unset ylabel

# Subfigure (R1,C2)
set ylabel "Att_{y} [rad]" \
font "/Library/Fonts/Times New Roman.ttf, 12"
plot cos(x) \
with lines linewidth 2 linecolor "black"
unset ylabel

# Subfigure (R1,C3)
set ylabel "Att_{z} [rad]" \
font "/Library/Fonts/Times New Roman.ttf, 12"
plot sin(2*x) \
with lines linewidth 2 linecolor "black"
unset ylabel

# Subfigure (R2,C1)
set ylabel "Pos_{x} [m]" \
font "/Library/Fonts/Times New Roman.ttf, 12"
plot cos(2*x) \
with lines linewidth 2 linecolor "black"
unset ylabel

# Subfigure (R2,C2)
set ylabel "Pos_{y} [m]" \
font "/Library/Fonts/Times New Roman.ttf, 12"
plot -sin(x) \
with lines linewidth 2 linecolor "black"
unset ylabel

# Subfigure (R2,C3)
set ylabel "Pos_{z} [m]" \
font "/Library/Fonts/Times New Roman.ttf, 12"
plot -cos(x) \
with lines linewidth 2 linecolor "black"
unset ylabel

# Subfigure (R3,C1)
set ylabel "Ang_{x} [rad/s]" \
font "/Library/Fonts/Times New Roman.ttf, 12"
plot sin(x) \
with lines linewidth 2 linecolor "black"
unset ylabel

# Subfigure (R3,C2)
set ylabel "Ang_{y} [rad/s]" \
font "/Library/Fonts/Times New Roman.ttf, 12"
plot cos(x) \
with lines linewidth 2 linecolor "black"
unset ylabel

# Subfigure (R3,C3)
set ylabel "Ang_{z} [rad/s]" \
font "/Library/Fonts/Times New Roman.ttf, 12"
plot sin(2*x) \
with lines linewidth 2 linecolor "black"
unset ylabel

# Subfigure (R4,C1)
set ylabel "Vel_{x} [m/s]" \
font "/Library/Fonts/Times New Roman.ttf, 12"
plot cos(2*x) \
with lines linewidth 2 linecolor "black"
unset ylabel

# Subfigure (R4,C2)
set ylabel "Vel_{y} [m/s]" \
font "/Library/Fonts/Times New Roman.ttf, 12"
plot -sin(x) \
with lines linewidth 2 linecolor "black"
unset ylabel

# Subfigure (R4,C3)
set ylabel "Vel_{z} [m/s]" \
font "/Library/Fonts/Times New Roman.ttf, 12"
plot -cos(x) \
with lines linewidth 2 linecolor "black"
unset ylabel

# Exit plotting
unset multiplot



